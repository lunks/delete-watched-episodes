{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "lib" : ["es2015"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
